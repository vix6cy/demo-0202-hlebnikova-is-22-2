<Window x:Class="демо0202.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Расчет материалов для продукции" 
        Height="800" 
        Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0C4882"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#0C4882" Padding="15" Margin="0,0,0,15">
            <TextBlock Text="РАСЧЕТ МАТЕРИАЛОВ ДЛЯ ПРОДУКЦИИ" 
                      Foreground="White" 
                      FontSize="18" 
                      FontWeight="SemiBold"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть - список продукции -->
            <GroupBox Grid.Column="0" Header="Список продукции" Margin="0,0,10,0">
                <DataGrid x:Name="ProductsGrid"
                          SelectionChanged="ProductsGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Наименование" 
                                           Binding="{Binding Наименование_продукции}" 
                                           Width="*"/>
                        <DataGridTextColumn Header="Артикул" 
                                           Binding="{Binding Артикул}" 
                                           Width="100"/>
                        <DataGridTextColumn Header="Стоимость" 
                                           Binding="{Binding Минимальная_стоимость_для_партнера, StringFormat=N2}" 
                                           Width="100"/>
                        <DataGridTextColumn Header="Тип продукции" 
                                           Binding="{Binding ProductsType.Тип_продукции}" 
                                           Width="150"/>
                        <DataGridTextColumn Header="Коэффициент" 
                                           Binding="{Binding ProductsType.Коэффициент_типа_продукции, StringFormat=F2}" 
                                           Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Правая часть - расчет -->
            <GroupBox Grid.Column="1" Header="Параметры расчета">
                <StackPanel>
                    <!-- Тип материала -->
                    <TextBlock Text="Тип материала:" Margin="0,0,0,5"/>
                    <ComboBox x:Name="MaterialTypeCombo" 
                             DisplayMemberPath="Тип_материала"
                             Margin="0,0,0,10"/>

                    <!-- Требуемое количество -->
                    <TextBlock Text="Требуемое количество продукции:" Margin="0,0,0,5"/>
                    <TextBox x:Name="RequiredQuantityText" 
                            Text="1"
                            Margin="0,0,0,10"/>

                    <!-- Количество на складе -->
                    <TextBlock Text="Количество на складе:" Margin="0,0,0,5"/>
                    <TextBox x:Name="StockQuantityText" 
                            Text="0"
                            Margin="0,0,0,10"/>

                    <!-- Параметр 1 -->
                    <TextBlock Text="Параметр продукции 1:" Margin="0,0,0,5"/>
                    <TextBox x:Name="Param1Text" 
                            Text="1.0"
                            Margin="0,0,0,10"/>

                    <!-- Параметр 2 -->
                    <TextBlock Text="Параметр продукции 2:" Margin="0,0,0,5"/>
                    <TextBox x:Name="Param2Text" 
                            Text="1.0"
                            Margin="0,0,0,10"/>

                    <!-- Информация о выбранной продукции -->
                    <Border BorderBrush="#BBDCFA" BorderThickness="1" Padding="10" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Выбранная продукция:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock x:Name="SelectedProductInfo" Text="Не выбрано"/>
                            <TextBlock x:Name="CoefficientInfo" Text="Коэффициент: не определен" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Кнопка расчета -->
                    <Button Content="Рассчитать материалы" 
                           Click="CalculateButton_Click"
                           HorizontalAlignment="Center"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Результат расчета -->
        <Border Grid.Row="2" 
                BorderBrush="#0C4882" 
                BorderThickness="1" 
                Background="#F0F8FF"
                Padding="15"
                Margin="0,0,0,15">
            <TextBlock x:Name="ResultText" 
                      Text="Здесь будет результат расчета"
                      FontSize="14"
                      FontWeight="SemiBold"
                      HorizontalAlignment="Center"
                      TextWrapping="Wrap"/>
        </Border>

        <!-- Кнопки -->
        <Border Grid.Row="3" Background="#BBDCFA" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Вернуться к заявкам" Click="BackButton_Click"/>
                <Button Content="Очистить" Click="ClearButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>