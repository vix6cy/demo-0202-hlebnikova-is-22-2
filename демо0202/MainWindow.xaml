<Window x:Class="демо0202.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:демо0202"
        mc:Ignorable="d"
        Title="Просмотр заявок партнеров" Height="600" Width="900" Icon="/Новые технологии.png">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0C4882"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#0C4882" Padding="15">
            <TextBlock Text="ЗАЯВКИ ПАРТНЕРОВ" 
                      Foreground="White" 
                      FontSize="18" 
                      FontWeight="SemiBold"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Панель управления -->
        <Border Grid.Row="1" Background="#BBDCFA" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Добавить заявку" Click="AddPartnerButton_Click"/>
                <Button Content="Расчет количества материалов" Click="Button_Click" />
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="20">
            <ItemsControl x:Name="OrdersItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                Margin="0,10" 
                                Padding="15" 
                                BorderThickness="1"
                                BorderBrush="#BBDCFA"
                                MouseLeftButtonDown="PartnerItem_MouseLeftButtonDown">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Информация о партнере -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock>
                                        <Run Text="{Binding PartnerTypeName}" FontWeight="SemiBold"/>
                                        <Run Text=" | "/>
                                        <Run Text="{Binding PartnerName}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding LegalAddress}" 
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding PhoneNumber}" 
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding RatingText, Mode=OneWay}" 
                                               FontWeight="SemiBold"
                                               Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Стоимость справа -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding CostText, Mode=OneWay}" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           VerticalAlignment="Top"
                                           HorizontalAlignment="Right"
                                           Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</Window>