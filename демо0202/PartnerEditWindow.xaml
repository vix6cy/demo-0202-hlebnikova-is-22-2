<Window x:Class="демо0202.PartnerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Редактирование заявки партнера" 
        Height="700" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="MaxHeight" Value="200"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0C4882"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>

    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#0C4882" Padding="10" Margin="0,0,0,10">
            <TextBlock x:Name="TitleTextBlock" 
                      Text="РЕДАКТИРОВАНИЕ ЗАЯВКИ ПАРТНЕРА" 
                      Foreground="White" 
                      FontSize="16" 
                      FontWeight="SemiBold"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Информация о партнере -->
                <GroupBox Header="Информация о партнере" Margin="0,0,0,10">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Тип партнера -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Тип партнера:"/>
                            <ComboBox x:Name="PartnerTypeComboBox" 
                                     Grid.Row="0" Grid.Column="1"
                                     DisplayMemberPath="Тип_партнера"
                                     SelectionChanged="PartnerTypeComboBox_SelectionChanged"/>

                            <!-- Наименование партнера -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Наименование:"/>
                            <TextBox x:Name="PartnerNameTextBox" 
                                    Grid.Row="1" Grid.Column="1"/>

                            <!-- Фамилия директора -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Фамилия директора:"/>
                            <TextBox x:Name="DirectorLastNameTextBox" 
                                    Grid.Row="2" Grid.Column="1"/>

                            <!-- Имя директора -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Имя директора:"/>
                            <TextBox x:Name="DirectorFirstNameTextBox" 
                                    Grid.Row="3" Grid.Column="1"/>

                            <!-- Отчество директора -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Отчество директора:"/>
                            <TextBox x:Name="DirectorMiddleNameTextBox" 
                                    Grid.Row="4" Grid.Column="1"/>

                            <!-- Адрес -->
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Юридический адрес:"/>
                            <TextBox x:Name="AddressTextBox" 
                                    Grid.Row="5" Grid.Column="1"/>

                            <!-- Рейтинг -->
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Рейтинг:"/>
                            <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal">
                                <Slider x:Name="RatingSlider" 
                                   Minimum="0" 
                                   Maximum="10" 
                                   Value="10"
                                   Width="200"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>
                            <TextBlock x:Name="RatingValueTextBlock" 
                                   Text="10" 
                                   VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Телефон -->
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Телефон:"/>
                            <TextBox x:Name="PhoneTextBox" 
                                    Grid.Row="7" Grid.Column="1"/>

                            <!-- Email -->
                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Email:"/>
                            <TextBox x:Name="EmailTextBox" 
                                    Grid.Row="8" Grid.Column="1"/>

                            <!-- ИНН -->
                            <TextBlock Grid.Row="9" Grid.Column="0" Text="ИНН:"/>
                            <TextBox x:Name="InnTextBox" 
                                    Grid.Row="9" Grid.Column="1"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Информация о заказе -->
                <GroupBox Header="Информация о заказе" Margin="0,0,0,10">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Дата заявки:"/>
                            <DatePicker x:Name="OrderDatePicker" 
                                       Grid.Row="0" Grid.Column="1"
                                       SelectedDate="{x:Static sys:DateTime.Now}"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Продукция в заказе -->
                <GroupBox Header="Продукция в заказе" Margin="0,0,0,10">
                    <StackPanel>
                        <DataGrid x:Name="ProductsDataGrid" 
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  Margin="0,0,0,10"
                                  MaxHeight="200">
                            <DataGrid.Columns>
                                <!-- Колонка с выбором продукции -->
                                <DataGridTemplateColumn Header="Продукция">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ProductName}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}, Path=DataContext.AllProducts}"
                                                      DisplayMemberPath="Наименование_продукции"
                                                      SelectedValuePath="Код"
                                                      SelectedValue="{Binding ProductId, UpdateSourceTrigger=PropertyChanged}"
                                                      SelectionChanged="ProductComboBox_SelectionChanged"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <!-- Колонка количества -->
                                <DataGridTemplateColumn Header="Количество">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Количество}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Количество, UpdateSourceTrigger=PropertyChanged}"
                                                     PreviewTextInput="NumberValidationTextBox"
                                                     LostFocus="QuantityTextBox_LostFocus"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>

                                <!-- Колонка цены -->
                                <DataGridTextColumn Header="Цена" 
                                                   Binding="{Binding Цена, StringFormat=N2}"
                                                   IsReadOnly="True"/>

                                <!-- Колонка суммы -->
                                <DataGridTextColumn Header="Сумма" 
                                                   Binding="{Binding Сумма, StringFormat=N2}"
                                                   IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Добавить строку" Click="AddProductRow_Click"/>
                            <Button Content="Удалить строку" Click="RemoveProductRow_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Итоговая информация -->
                <Border BorderBrush="#0C4882" BorderThickness="1" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="Общая стоимость заказа:" 
                                  FontWeight="Bold"/>
                        <TextBlock x:Name="TotalCostTextBlock" 
                                  Grid.Column="1" 
                                  Text="0.00 руб." 
                                  FontWeight="Bold" 
                                  FontSize="14"
                                  Foreground="#0C4882"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" Background="#BBDCFA" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Сохранить" Click="SaveButton_Click"/>
                <Button Content="Отмена" Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>